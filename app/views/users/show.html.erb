<%= provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">

      <h1>
        <%= @user.name %>
      </h1>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Role:</strong>
        <% if @user.superadmin? %>
          Superadmin
        <% elsif @user.admin? %>
          Admin
        <% else %>
          Customer
        <% end %>
      </p>

    </section>
  </aside>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
